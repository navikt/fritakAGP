{
  "openapi":"3.0.1",
  "info": {
    "description": "API for å sende inn søknader for gravide og kronisk syke",
    "version": "1.0.0",
    "title": "FritakAGP",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "helsearbeidsgiver@nav.no"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "https://fritakagp.dev.nav.no/api/v1",
      "description": "Dev"
    },
    {
      "url": "https://arbeidsgiver.nav.no/fritak-agp-api",
      "description": "Prod"
    }
  ],
  "tags": [
    {
      "name": "Gravide",
      "description": "Søknad- og kravskjema for gravide"
    },
    {
      "name": "Kronisk",
      "description": "Søknad- og kravskjema for kronisk syke eller ved langvarig sykdom"
    }
  ],
  "paths": {
    "/gravid/soeknad": {
      "post": {
        "tags": ["Gravide"],
        "summary": "Send inn søknad om at NAV dekker sykepenger i arbeidsgiverperioden for gravide",
        "description": "",

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GravidSoeknad"
              }
            }
          }
        },


        "responses": {
          "201": {
            "description": "Søknaden er mottatt"
          },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": {
            "description": "Det er feil i datene som er sendt inn. Se på respons for å finne hvilke felter det gjelder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationResponse"
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        },
        "security": [
          {
            "bearer-key": ["selvbetjening-idtoken"]
          }
        ]
      }
    },
    "/gravid/krav": {
      "post": {
        "tags": ["Gravide"],
        "summary": "Send inn krav om refusjon av sykepenger i arbeidsgiverperioden for gravide",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GravidKrav"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Kravet er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": {
            "description": "Det er feil i datene som er sendt inn. Se på respons for å finne hvilke felter det gjelder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationResponse"
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        },
        "security": [
          {
            "bearer-key": ["selvbetjening-idtoken"]
          }
        ]
      }
    },
    "/kronisk/soeknad": {
      "post": {
        "tags": ["Kronisk"],
        "summary": "Send inn søknad om at NAV dekker sykepenger i arbeidsgiverperioden for kronisk eller langvarig syke",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/KroniskSoeknad"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Søknaden er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": {
            "description": "Det er feil i datene som er sendt inn. Se på respons for å finne hvilke felter det gjelder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationResponse"
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        },
        "security": [
          {
            "bearer-key": ["selvbetjening-idtoken"]
          }
        ]
      }
    },
    "/kronisk/krav": {
      "post": {
        "tags": ["Kronisk"],
        "summary": "Send inn krav om refusjon av sykepenger i arbeidsgiverperioden for kronisk eller langvarig syke",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/KroniskKrav"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Søknaden er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": {
            "description": "Det er feil i datene som er sendt inn. Se på respons for å finne hvilke felter det gjelder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationResponse"
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        },
        "security": [
          {
            "bearer-key": ["selvbetjening-idtoken"]
          }
        ]
      }
    }
  },

  "components": {
    "schemas": {
      "GravidSoeknad": {
        "type": "object",
        "required": ["virksomhetsnummer", "identitetsnummer", "tiltak", "tilrettelegge", "bekreftet"],
        "properties": {
          "virksomhetsnummer": {
            "$ref": "#/components/schemas/virksomhetsnummer"
          },
          "identitetsnummer": {
            "$ref": "#/components/schemas/identitetsnummer"
          },
          "tilrettelegge": {
            "type": "boolean",
            "description": "Har dere prøvd å tilrettelegge arbeidsdagen slik at den gravide kan jobbe til tross for helseplagene?"
          },
          "termindato": {
            "type": "string",
            "format": "åååå-mm-dd",
            "example": "2021-08-24",
            "description": "Når har den ansatte termin?"
          },
          "tiltak": {
            "type": "array",
            "minItems": 0,
            "description": "Hvilke tiltak har dere forsøkt eller vurdert for at den ansatte kan jobbe?",
            "enum": [
              "TILPASSET_ARBEIDSTID",
              "HJEMMEKONTOR",
              "TILPASSEDE_ARBEIDSOPPGAVER",
              "ANNET"
            ]
          },
          "tiltakBeskrivelse": {
            "type": "string",
            "description": "Gi en kort beskrivelse av hva dere har gjort"
          },
          "omplassering": {
            "type": "string",
            "description": "Har dere forsøkt omplassering til en annen jobb?",
            "enum": ["JA", "NEI", "IKKE_MULIG"]
          },
          "omplasseringAarsak": {
            "type": "string",
            "description": "Oppgi årsak til at omplassering er ikke mulig",
            "enum": [
              "MOTSETTER", "FAAR_IKKE_KONTAKT", "IKKE_ANDRE_OPPGAVER", "HELSETILSTANDEN"
            ]
          },
          "bekreftet": {
            "$ref": "#/components/schemas/bekreftet"
          },
          "dokumentasjon": {
            "$ref": "#/components/schemas/dokumentasjon"
          }
        }
      },
      "GravidKrav": {
        "type": "object",
        "required": ["virksomhetsnummer", "identitetsnummer", "perioder", "kontrollDager", "antallDager", "bekreftet"],
        "properties": {
          "virksomhetsnummer": {
            "$ref": "#/components/schemas/virksomhetsnummer"
          },
          "identitetsnummer": {
            "$ref": "#/components/schemas/identitetsnummer"
          },
          "perioder": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Arbeidsgiverperiode"
            },
            "minItems": 1,
            "maxItems": 100
          },
          "kontrollDager": {
            "type": "integer",
            "example": 1
          },
          "antallDager": {
            "$ref": "#/components/schemas/AntallDager"
          },
          "bekreftet": {
            "$ref": "#/components/schemas/bekreftet"
          },
          "dokumentasjon": {
            "$ref": "#/components/schemas/dokumentasjon"
          }
        }
      },
      "Arbeidsgiverperiode": {
        "type": "object",
        "required": ["fom", "tom", "antallDagerMedRefusjon", "månedsinntekt"],
        "properties": {
          "fom": {
            "type": "string",
            "format": "åååå-mm-dd",
            "example": "2021-07-14"
          },
          "tom": {
            "type": "string",
            "format": "åååå-mm-dd",
            "example": "2021-07-15"
          },
          "antallDagerMedRefusjon": {
            "type": "integer",
            "minimum": 0,
            "example": 3
          },
          "månedsinntekt": {
            "type": "integer",
            "minimum": 0,
            "example": 10000
          },
          "gradering": {
            "type": "number",
            "default": 1,
            "example": 1,
            "minimum": 0,
            "maximum": 1,
            "description": "Sykemeldingsgrad i prosent oppgitt som desimaltall. 50% grad oppgis som 0.5 og 100% grad oppgis som 1"
          }
        }
      },
      "KroniskSoeknad": {
        "type": "object",
        "required": [
          "identitetsnummer",
          "virksomhetsnummer",
          "arbeidstyper",
          "paakjenningstyper",
          "fravaer",
          "antallPerioder",
          "bekreftet"
        ],
        "properties": {
          "virksomhetsnummer": {
            "$ref": "#/components/schemas/virksomhetsnummer"
          },
          "identitetsnummer": {
            "$ref": "#/components/schemas/identitetsnummer"
          },
          "arbeidstyper": {
            "type": "array",
            "description": "Hva slags arbeid utfører den ansatte?",
            "example": ["STILLESITTENDE"],
            "minItems": 1,
            "enum": [
              "STILLESITTENDE",
              "MODERAT",
              "KREVENDE"
            ]
          },
          "paakjenningstyper": {
            "type": "array",
            "description": "Hvilke påkjenninger innebærer arbeidet?",
            "example": ["STRESSENDE"],
            "minItems": 1,
            "enum": [
              "ALLERGENER",
              "UKOMFORTABEL",
              "STRESSENDE",
              "REGELMESSIG",
              "GAAING",
              "HARDE",
              "TUNGE",
              "ANNET"
            ]
          },
          "paakjenningBeskrivelse": {
            "type": "string",
            "example": "Forklaring av påkjenningen fylles ut her",
            "description": "Dersom ANNET er valgt for paakjenningstyper må det oppgis en kort beskrivelse her."
          },

          "fravaer": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FravaerPeriode"
            },
            "minItems": 1,
            "maxItems": 100
          },
          "antallPerioder": {
            "type": "integer",
            "example": 1,
            "description": "Hvor mange perioder er fraværet fordelt på siste 12 måneder?"
          },
          "bekreftet": {
            "$ref": "#/components/schemas/bekreftet"
          },
          "dokumentasjon": {
            "$ref": "#/components/schemas/dokumentasjon"
          }
        }
      },
      "KroniskKrav": {
        "type": "object",
        "description": "Skjema for krav",
        "required": ["virksomhetsnummer", "identitetsnummer", "perioder"],
        "properties": {
          "virksomhetsnummer": {
            "$ref": "#/components/schemas/virksomhetsnummer"
          },
          "identitetsnummer": {
            "$ref": "#/components/schemas/identitetsnummer"
          },
          "antallDager": {
            "$ref": "#/components/schemas/AntallDager"
          },
          "perioder": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Arbeidsgiverperiode"
            }
          },
          "bekreftet": {
            "$ref": "#/components/schemas/bekreftet"
          },
          "dokumentasjon": {
            "$ref": "#/components/schemas/dokumentasjon"
          }
        }
      },
      "FravaerData": {
        "type": "array",
        "minItems": 1,
        "properties": {
          "yearMonth": {
            "type": "string",
            "description": "Måned og årstall for fraværet",
            "format": "åååå-mm",
            "example": "2021-10"
          },
          "antallDagerMedFravaer": {
            "type": "integer",
            "description": "",
            "minimum": 0,
            "example": 1
          }
        }
      },

      "FravaerPeriode": {
        "type": "object",
        "properties": {
          "yearMonth": {
            "type": "string",
            "description": "Måned og årstall for fraværet",
            "format": "åååå-mm",
            "example": "2021-10"
          },
          "antallDagerMedFravaer": {
            "type": "integer",
            "description": "",
            "minimum": 0,
            "example": 1
          }
        }
      },



      "ValidationResponse": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Namespace for denne type respons"
          },
          "title": {
            "type": "string",
            "description": "En overordnet beskrivelse av valideringen"
          },
          "detail": {
            "type": "string",
            "description": "En detaljert beskrivelse av valideringen"
          },
          "status": {
            "type": "integer",
            "description": "Vil alltid være 422"
          },
          "instance": {
            "type": "string",
            "description": "Står alltid about:blank"
          },
          "violations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationProblemDetail"
            }
          }
        }
      },
      "ValidationProblemDetail": {
        "type": "object",
        "properties": {
          "validationType": {
            "type": "string", "description": "Navn på constraint som feiler"
          },
          "message": {
            "type": "string", "description": "En detaljert beskrivelse av valideringsfeilen"
          },
          "propertyPath": {
            "type": "string", "description": "Hvilket felt som ikke validerer"
          },
          "invalidValue": {
            "type": "string", "description": "Verdien som var ugyldig"
          }
        }
      },
      "virksomhetsnummer": {
        "type": "string",
        "minLength": 9,
        "maxLength": 9,
        "description": "Virksomhetsnummeret (ikke organisasjonsnummer) til arbeidsgiver"
      },
      "identitetsnummer": {
        "type": "string",
        "minLength": 11,
        "maxLength": 11,
        "description": "Fødselsnummer (11 siffer)"
      },
      "dokumentasjon": {
        "type": "string",
        "maxLength": 500000,
        "required": false,
        "description": "Vedlegg i PDF format. Base64 encoded. Bruk null dersom dokumentasjon ikke foreligger.",
        "example": null
      },
      "bekreftet": {
        "type": "boolean",
        "required": true,
        "description": "Bekreft at opplysningene er korrekt"
      },
      "AntallDager": {
        "type": "integer",
        "example": 1,
        "description": "Oppgi antall dager dere utbetaler lønn for i året. 260 dager er vanlig for en ordinær 100% stilling."
      }
    },
    "securitySchemes": {
      "bearer-key": {
        "type": "http",
        "scheme": "cookie",
        "key": "selvbetjening-idtoken",
        "bearerFormat": "JWT"
      }
    }
  }
}