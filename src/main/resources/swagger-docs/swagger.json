{
  "swagger": "2.0",
  "info": {
    "description": "API for å sende inn søknader for gravide og kronisk syke",
    "version": "1.0.0",
    "title": "FritakAGP",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "helsearbeidsgiver@nav.no"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "",
  "basePath": "/api/v1",
  "tags": [
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/gravid/soeknad": {
      "post": {
        "summary": "Send inn søknad om at NAV dekker sykepenger i arbeidsgiverperioden",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Søknaden",
            "required": true,
            "schema": {
              "$ref": "#/definitions/GravidSoeknad"
            }
          }
        ],
        "responses": {
          "201": { "description": "Søknaden er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "definitions": {
    "GravidSoeknad": {
      "type": "object",
      "properties": {
        "virksomhetsnummer": {
          "type": "string",
          "minLength": 9,
          "maxLength": 9,
          "description": "Virksomhetsnummeret (ikke organisasjonsnummer) til arbeidsgiver"
        },
        "identitetsnummer": {
          "type": "string",
          "minLength": 11,
          "maxLength": 11,
          "description": "Den ansattes fødselsnummer (11 siffer)"
        },
        "tilrettelegge": {
          "type": "boolean",
          "description": "Har dere prøvd å tilrettelegge arbeidsdagen slik at den gravide kan jobbe til tross for helseplagene?"
        },
        "termindato": {
          "type": "string",
          "format": "åååå-mm-dd",
          "description": "Når har den ansatte termin?"
        },
        "tiltak": {
          "type": "string",
          "description": "Hvilke tiltak har dere forsøkt eller vurdert for at den ansatte kan jobbe?",
          "enum": [
            "TILPASSET_ARBEIDSTID",
            "HJEMMEKONTOR",
            "TILPASSEDE_ARBEIDSOPPGAVER",
            "ANNET"
          ]
        },
        "tiltakBeskrivelse": {
          "type": "string",
          "description": "Gi en kort beskrivelse av hva dere har gjort"
        },
        "omplassering": {
          "type": "string",
          "description": "Har dere forsøkt omplassering til en annen jobb?",
          "enum": ["JA", "NEI", "IKKE_MULIG"]
        },
        "omplasseringAarsak": {
          "type": "string",
          "description": "Oppgi årsak til at omplassering er ikke mulig",
          "enum": [
            "MOTSETTER", "FAAR_IKKE_KONTAKT", "IKKE_ANDRE_OPPGAVER", "HELSETILSTANDEN"
          ]
        },
        "bekreftet": {
          "type": "boolean",
          "description": "Må være satt til true"
        },
        "dokumentasjon": {
          "type": "string",
          "description": "Vedlegg i PDF format. Base64 encoded. Valgfritt"
        }
      }
    },
    "ValidationResponse": {
      "type": "object",
      "properties": {
        "violations": {
          "type": "array",
          "description": "Virksomhetsnummeret",
          "schema": {
            "$ref": "#/definitions/ValidationProblemDetail"
          }
        }
      }
    },
    "ValidationProblemDetail": {
      "type": "object",
      "properties": {
        "validationType": {
          "type": "string", "description": "Virksomhetsnummeret"
        },
        "message": {
          "type": "string", "description": "Virksomhetsnummeret"
        },
        "propertyPath": {
          "type": "string", "description": "Virksomhetsnummeret"
        },
        "invalidValue": {
          "type": "string", "description": "Virksomhetsnummeret"
        }
      }
    }
  }
}