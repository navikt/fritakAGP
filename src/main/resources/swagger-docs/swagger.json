{
  "swagger": "2.0",
  "info": {
    "description": "API for å sende inn søknader for gravide og kronisk syke",
    "version": "1.0.0",
    "title": "FritakAGP",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "helsearbeidsgiver@nav.no"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Gravide",
      "description": "Søknad og kravskjema for gravide"
    },
    {
      "name": "Kronisk",
      "description": "Søknad og kravskjema for Kronisk eller ved langvarig sykdom"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/gravid/soeknad": {
      "post": {
        "tags": ["Gravide"],
        "summary": "Send inn søknad om at NAV dekker sykepenger i arbeidsgiverperioden for gravide",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Søknaden",
            "required": true,
            "schema": {
              "$ref": "#/definitions/GravidSoeknad"
            }
          }
        ],
        "responses": {
          "201": { "description": "Søknaden er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/gravid/krav": {
      "post": {
        "tags": ["Gravide"],
        "summary": "Send inn krav om refusjon av sykepenger i arbeidsgiverperioden for gravide",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Kravet",
            "required": true,
            "schema": {
              "$ref": "#/definitions/GravidKrav"
            }
          }
        ],
        "responses": {
          "201": { "description": "Kravet er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/kronisk/soeknad": {
      "post": {
        "tags": ["Kronisk"],
        "summary": "Send inn søknad om at NAV dekker sykepenger i arbeidsgiverperioden for kronisk eller langvarig syke",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
              "name": "selvbetjening-idtoken",
              "in": "header",
              "required": false,
              "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Søknaden",
            "required": true,
            "schema": {
              "$ref": "#/definitions/KroniskSoeknad"
            }
          }
        ],
        "responses": {
          "201": { "description": "Søknaden er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/kronisk/krav": {
      "post": {
        "tags": ["Kronisk"],
        "summary": "Send inn krav om refusjon av sykepenger i arbeidsgiverperioden for kronisk eller langvarig syke",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Søknaden",
            "required": true,
            "schema": {
              "$ref": "#/definitions/KroniskKrav"
            }
          }
        ],
        "responses": {
          "201": { "description": "Søknaden er godkjent" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "definitions": {
    "GravidSoeknad": {
      "type": "object",
      "required": ["virksomhetsnummer", "identitetsnummer", "tilrettelegge", "bekreftet"],
      "properties": {
        "virksomhetsnummer": {
          "$ref": "#/definitions/virksomhetsnummer"
        },
        "identitetsnummer": {
          "$ref": "#/definitions/identitetsnummer"
        },
        "tilrettelegge": {
          "type": "boolean",
          "description": "Har dere prøvd å tilrettelegge arbeidsdagen slik at den gravide kan jobbe til tross for helseplagene?"
        },
        "termindato": {
          "type": "string",
          "format": "åååå-mm-dd",
          "description": "Når har den ansatte termin?"
        },
        "tiltak": {
          "type": "string",
          "description": "Hvilke tiltak har dere forsøkt eller vurdert for at den ansatte kan jobbe?",
          "enum": [
            "TILPASSET_ARBEIDSTID",
            "HJEMMEKONTOR",
            "TILPASSEDE_ARBEIDSOPPGAVER",
            "ANNET"
          ]
        },
        "tiltakBeskrivelse": {
          "type": "string",
          "description": "Gi en kort beskrivelse av hva dere har gjort"
        },
        "omplassering": {
          "type": "string",
          "description": "Har dere forsøkt omplassering til en annen jobb?",
          "enum": ["JA", "NEI", "IKKE_MULIG"]
        },
        "omplasseringAarsak": {
          "type": "string",
          "description": "Oppgi årsak til at omplassering er ikke mulig",
          "enum": [
            "MOTSETTER", "FAAR_IKKE_KONTAKT", "IKKE_ANDRE_OPPGAVER", "HELSETILSTANDEN"
          ]
        },
        "bekreftet": {
          "$ref": "#/definitions/bekreftet"
        },
        "dokumentasjon": {
          "$ref": "#/definitions/dokumentasjon"
        }
      }
    },
    "GravidKrav": {
      "type": "object",
      "required": ["virksomhetsnummer", "identitetsnummer", "perioder", "kontrollDager", "antallDager", "bekreftet"],
      "properties": {
        "virksomhetsnummer": {
          "$ref": "#/definitions/virksomhetsnummer"
        },
        "identitetsnummer": {
          "$ref": "#/definitions/identitetsnummer"
        },
        "perioder": {
          "type": "array",
          "$ref": "#/definitions/Arbeidsgiverperiode",
          "minItems": 1,
          "maxItems": 100
        },
        "kontrollDager": {
          "type": "integer"
        },
        "antallDager": {
          "type": "integer",
          "minimum": 1,
          "description": "Oppgi antall dager dere utbetaler lønn for i året. 250 dager er vanlig for en ordinær 100% stilling"
        },
        "bekreftet": {
          "$ref": "#/definitions/bekreftet"
        },
        "dokumentasjon": {
          "$ref": "#/definitions/dokumentasjon"
        }
      }
    },
    "Arbeidsgiverperiode": {
      "type": "object",
      "required": ["fom", "tom", "antallDagerMedRefusjon", "månedsinntekt"],
      "properties": {
        "fom": {
          "type": "string",
          "format": "åååå.mm.dd"
        },
        "tom": {
          "type": "string",
          "format": "åååå.mm.dd"
        },
        "antallDagerMedRefusjon": {
          "type": "integer",
          "minimum": 0
        },
        "månedsinntekt": {
          "type": "integer",
          "minimum": 0
        },
        "gradering": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 1,
          "description": "Sykemeldingsgrad i prosent oppgitt som desimaltall",
          "example": "50% grad oppgis som 0.5 og 100% grad oppgis som 1"
        }
      }
      },
    "KroniskSoeknad": {
      "type": "object",
      "required": [
        "virksomhetsnummer",
        "identitetsnummer",
        "antallDagerMedRefusjon",
        "månedsinntekt",
        "arbeidstyper",
        "paakjenningstyper",
        "fravaer",
        "FravaerData",
        "antallPerioder",
        "bekreftet"
      ],
      "properties": {
        "virksomhetsnummer": {
          "$ref": "#/definitions/virksomhetsnummer"
        },
        "identitetsnummer": {
          "$ref": "#/definitions/identitetsnummer"
        },
        "arbeidstyper": {
          "type": "string",
          "description": "Hva slags arbeid utfører den ansatte?",
          "enum": [
            "STILLESITTENDE",
            "MODERAT",
            "KREVENDE"
          ]
        },
        "paakjenningstyper": {
          "type": "string",
          "description": "Hvilke påkjenninger innebærer arbeidet?",
          "enum": [
            "ALLERGENER",
            "UKOMFORTABEL",
            "STRESSENDE",
            "REGELMESSIG",
            "GAAING",
            "HARDE",
            "TUNGE",
            "ANNET"
          ]
        },
        "paakjenningBeskrivelse": {
          "type": "string",
          "description": "Dersom ANNET er valgt for paakjenningstyper må det oppgis en kort beskrivelse her."
        },
        "fravaer": {
          "$ref": "#/definitions/FravaerData"
        },

        "antallPerioder": {
          "type": "string",
          "description": "Hvor mange perioder er fraværet fordelt på siste 12 måneder?"
        },
        "bekreftet": {
          "$ref": "#/definitions/bekreftet"
        },
        "dokumentasjon": {
          "$ref": "#/definitions/dokumentasjon"
        }
      }
    },
    "KroniskKrav": {
      "type": "object",
      "required": ["virksomhetsnummer", "identitetsnummer", "perioder"],
      "properties": {
        "virksomhetsnummer": {
          "$ref": "#/definitions/virksomhetsnummer"
        },
        "identitetsnummer": {
          "$ref": "#/definitions/identitetsnummer"
        },
        "perioder": {
          "type": "array",
          "$ref": "#/definitions/Arbeidsgiverperiode"
        },



        "bekreftet": {
          "$ref": "#/definitions/bekreftet"
        },
        "dokumentasjon": {
          "$ref": "#/definitions/dokumentasjon"
        }
      }
    },
    "FravaerData": {
      "type": "object",
      "required": ["yearMonth", "antallDagerMedFravaer"],
      "properties": {
        "yearMonth": {
          "type": "string",
          "description": "Måned og årstall for fraværet",
          "format": "åååå-mm"
        },
        "antallDagerMedFravaer": {
          "type": "integer",
          "description": "",
          "minimum": 0
        }
      }
    },
    "ValidationResponse": {
      "type": "object",
      "properties": {
        "violations": {
          "type": "array",
          "$ref": "#/definitions/ValidationProblemDetail"
        }
      }
    },
    "ValidationProblemDetail": {
      "type": "object",
      "properties": {
        "validationType": {
          "type": "string", "description": ""
        },
        "message": {
          "type": "string", "description": ""
        },
        "propertyPath": {
          "type": "string", "description": ""
        },
        "invalidValue": {
          "type": "string", "description": "Verdien som var ugyldig"
        }
      }
    },
    "virksomhetsnummer": {
      "type": "string",
      "minLength": 9,
      "maxLength": 9,
      "description": "Virksomhetsnummeret (ikke organisasjonsnummer) til arbeidsgiver"
    },
    "identitetsnummer": {
      "type": "string",
      "minLength": 11,
      "maxLength": 11,
      "description": "Fødselsnummer (11 siffer)"
    },
    "dokumentasjon": {
      "type": "string",
      "maxLength": 500000,
      "description": "Vedlegg i PDF format. Base64 encoded."
    },
    "bekreftet": {
      "type": "boolean",
      "description": "Bekreft at opplysningene er korrekt"
    }
  }
}